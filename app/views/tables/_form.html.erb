<%= form_with(model: table, local: true) do |form| %>
  <% if table.errors.any? %>
    <div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
      <h2 class="text-lg font-semibold mb-3"><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h2>
      <ul class="list-disc leading-relaxed">
        <% table.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Table Number -->
  <div class="mb-6">
    <%= form.label :table_number, "Table Number", class: "block text-gray-800 font-semibold mb-2" %>
    <%= form.number_field :table_number, 
          class: "border rounded w-full py-2 px-3", 
          style: "border-color: #c6a361; background-color: #fefefe; color: #762508;", 
          min: 2, placeholder: "Enter a table number greater than 1" %>
  </div>

  <!-- Seating Capacity -->
  <div class="mb-6">
    <%= form.label :seating_capacity, "Seating Capacity", class: "block text-gray-800 font-semibold mb-2" %>
    <%= form.select :seating_capacity, 
          options_for_select([2, 4, 6, 8], table.seating_capacity), 
          class: "border rounded w-full py-2 px-3", 
          style: "border-color: #c6a361; background-color: #fefefe; color: #762508;" %>
  </div>

  <!-- Submit Button -->
  <div class="flex items-center">
    <%= form.submit "Save Table", 
          class: "px-4 py-2 rounded font-semibold", 
          style: "background-color: #762508; color: #FFFFFF;", 
          onmouseover: "this.style.background = '#F29F05';", 
          onmouseout: "this.style.background = '#762508';" %>
    <% if table.persisted? %>
      <%= link_to "Cancel", table, 
            class: "ml-3 underline text-neutral-700 hover:text-neutral-900" %>
    <% else %>
      <%= link_to "Cancel", tables_path, 
            class: "ml-3 underline text-neutral-700 hover:text-neutral-900" %>
    <% end %>
  </div>
<% end %>
