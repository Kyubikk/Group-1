<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Menu Item</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to menu_items_path, class: button_class(theme: "transparent") do %>
        All Menu Items
      <% end %>
      <%= link_to edit_menu_item_path(@menu_item), class: button_class(theme: "primary") do %>
        Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
    <li>
      <p class="font-semibold">Name:</p>
      <p><%= @menu_item.name %></p>
    </li>
    <li>
      <p class="font-semibold">Price:</p>
      <p><%= number_to_currency(@menu_item.price) %></p> 
    </li>
    <li>
      <p class="font-semibold">Category:</p>
      <p><%= @menu_item.cate.cate_name %></p> 
    </li>
  </ul>
</div>
