<div id="<%= dom_id menu_item %>">
  <p>
    <strong>Name:</strong>
    <%= menu_item.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= menu_item.price %>
  </p>

  <p>
    <strong>Cate:</strong>
    <%= menu_item.cate_id %>
  </p>

  <p>
    <% if menu_item.image.attached? %>
        <%= image_tag(resources.image, style:"width: 100px") %>
    <% end %>
  </p>

</div>
